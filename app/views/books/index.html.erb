<% content_for :css do %>
    <%= stylesheet_link_tag 'books' %>
<% end %>

<div id="container">
  <h1>Books</h1>

  <table>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book.id) %></td>
        <td><%= link_to "Edit", edit_book_path(book.id) %></td>
        <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
      </tr>
    <% end %>
  </table>

<!--param is missing or the value is empty: books-->
<!--Parameters:-->
<!--{"authenticity_token"=>"[FILTERED]", "book"=>{"title"=>"test", "body"=>"test"}, "commit"=>"Create Book"}-->

  <h2>New Book</h2>

  <div class="error-box">
    <% if @book.errors.any? %>
      <%= @book.errors.count %> error prohibited this book from being saved:
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  </div>

  <%= form_with model: @book, url: book_path, method: :post do |f| %>
    <div class="input-box">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>

    <div class="input-box">
      <%= f.label :body %>
      <%= f.text_area :body %>
    </div>

    <%= f.submit 'Create Book' %>

  <% end %>
</div>
